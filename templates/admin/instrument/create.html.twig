{% extends 'base.html.twig' %}

{% block title %}{{ 'add_instrument'|trans|capitalize }}{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('homepage') }}">{{ 'home'|trans|capitalize }}</a> &gt;
    <a href="{{ path('admin_dashboard_dashboard') }}">{{ 'admin'|trans|capitalize }}</a> &gt;
    <a href="{{ path('admin_instrument_list') }}">{{ 'instruments'|trans|capitalize }}</a> &gt;
    <span class="bc-current">{{ 'create'|trans|capitalize }}</span>
{% endblock %}

{% block body %}
    <h1>{{ 'add_instrument'|trans|capitalize }}</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'add_instrument'|trans|capitalize }}" class="btn btn-secondary" />
    {{ form_end(form) }}

{% endblock %}
