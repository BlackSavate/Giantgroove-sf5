{% extends 'base.html.twig' %}

{% block title %}{{ 'admin'|trans|capitalize }} {{ 'dashboard'|trans|capitalize }}{% endblock %}

{% block body %}
  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if userList %}
      <table>
        <thead>
          <th>Id</th>
          <th>{{ 'username'|trans|capitalize }}</th>
          <th>{{ 'active'|trans|capitalize }}</th>
          <th>{{ 'roles'|trans|capitalize }}</th>
          <th>{{ 'actions'|trans|capitalize }}</th>
        </thead>
        <tbody>
          {% for user in userList %}
            <tr>
              <td>{{ user.id }}</td>
              <td>{{ user.username }}</td>
              <td>{{ (user.isActive?'yes':'no')|trans|capitalize }}</td>
              <td>
                <ul>
                  {% for role in user.roles %}
                    <li>{{ role }}</li>
                  {% endfor %}
                </ul>
              </td>
              <td>
                <ul>
                  <li>
                    <a href="{{ path('admin_user_update', {'slug':  user.slug}) }}">{{ 'edit'|trans|capitalize }}</a>
                  </li>
                  <li>
                    <a href="">{{ 'disable'|trans|capitalize }}</a>
                  </li>
              </ul>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}
  {% endif %}
{% endblock %}
