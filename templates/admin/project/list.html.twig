{% extends 'base.html.twig' %}

{% block title %}{{ 'admin'|trans|capitalize }} {{ 'dashboard'|trans|capitalize }}{% endblock %}

{% block breadcrumb %}
  <a href="{{ path('homepage') }}">{{ 'home'|trans|capitalize }}</a> &gt;
  <a href="{{ path('admin_dashboard_dashboard') }}">{{ 'admin'|trans|capitalize }}</a> &gt;
  <span class="bc-current">{{ 'projects'|trans|capitalize }}</span>
{% endblock %}

{% block body %}
  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if projectList %}
      <table>
        <thead>
          <th>Id</th>
          <th>{{ 'title'|trans|capitalize }}</th>
          <th>{{ 'actions'|trans|capitalize }}</th>
        </thead>
        <tbody>
          {% for project in projectList %}
            <tr>
              <td>{{ project.id }}</td>
              <td>{{ project.title }}</td>
              <td>
                <ul>
                  <li>
                    <a href="{{ path('admin_project_update', {'slug':  project.slug}) }}" class="btn btn-warning">{{ 'edit'|trans|capitalize }}</a>
                  </li>
                  <li>
                    <a href="" class="btn btn-danger">{{ 'delete'|trans|capitalize }}</a>
                  </li>
              </ul>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
      <p>{{ 'nothing_to_display'|trans|capitalize }}</p>
    {% endif %}
  {% endif %}
{% endblock %}
