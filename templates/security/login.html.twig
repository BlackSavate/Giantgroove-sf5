{% extends 'base.html.twig' %}

{% block title %}{{ 'login'|trans|capitalize }}{% endblock %}

{% block body %}
  {% if error %}
  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form class="d-flex align-items-center flex-column" action="{{ path('login') }}" method="post">
    <label for="username">{{ 'username'|trans|capitalize }}:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">{{ 'password'|trans|capitalize }}:</label>
    <input type="password" id="password" name="_password" />


    {#
    If you want to control the URL the user
    is redirected to on success (more details below)
    <input type="hidden" name="_target_path" value="/account" />
    #}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button type="submit" class="btn btn-secondary">{{ 'login'|trans|capitalize }}</button>
  </form>
  <div>
    <small>{{ 'not_registered'|trans|capitalize|nl2br|replace({'%link_start%': '<a href="'~path('register')~'">', '%link_end%': '</a>'})|raw }}</small>
  </div>
{% endblock %}
